 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:gravity="center"
     android:layout_gravity="center">

     <TextView
         android:layout_centerHorizontal="true"
         android:id="@+id/fragment_four_colors_text_color_name"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/fragment_four_colors"
         android:gravity="center"
         android:layout_marginBottom="@dimen/standart_margin"/>

     <TableLayout
         android:layout_below="@+id/fragment_four_colors_text_color_name"
         android:id="@+id/tableOfFour"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center">

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center">
            <ImageButton
                android:id="@+id/color_button_1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/standart_margin"/>
             <ImageButton
                 android:id="@+id/color_button_2"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"/>
         </TableRow>

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center">
             <ImageButton
                 android:id="@+id/color_button_3"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginRight="@dimen/standart_margin"/>
             <ImageButton
                 android:id="@+id/color_button_4"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"/>
         </TableRow>

     </TableLayout>

 </RelativeLayout>
